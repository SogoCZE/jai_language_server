{
  "name": "jails",
  "displayName": "Jails",
  "description": "Experimental language server for Jai programming language",
  "icon": "images/icon.png",
  "version": "0.2.0",
  "publisher": "ApparentlyStudio",
  "author": "Patrik Smělý (SogoCZE)",
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:jai"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/SogoCZE/jai_language_server"
  },
  "scripts": {
    "compile": "tsc -b",
    "watch": "tsc --watch",
    "pack:linux": "cp ../bin/jails ./out/jails-linux && vsce package",
    "pack:mac": "cp ../bin/jails ./out/jails-darwin-arm64 && vsce package",
    "pack:windows": "copy ..\\bin\\jails.exe .\\out\\jails-win32-x64.exe && vsce package"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.84.2"
  },
  "categories": [
    "Programming Languages"
  ],
  "dependencies": {
    "vscode-languageclient": "9.0.1"
  },
  "devDependencies": {
    "@types/node": "20.10.2",
    "@types/vscode": "1.84.2",
    "typescript": "5.3.2"
  },
  "keywords": [
    "Jai"
  ],
  "contributes": {
    "commands": [
      {
        "command": "jails.restart",
        "title": "Restart",
        "category": "Jails"
      },
      {
        "command": "jails.start",
        "title": "Start",
        "category": "Jails"
      },
      {
        "command": "jails.stop",
        "title": "Stop",
        "category": "Jails"
      }
    ],
    "languages": [
      {
        "id": "jai",
        "aliases": [
          "Jai",
          "jai"
        ],
        "extensions": [
          ".jai"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "jai",
        "scopeName": "source.jai",
        "path": "./syntaxes/jai.tmLanguage.json"
      }
    ]
  }
}